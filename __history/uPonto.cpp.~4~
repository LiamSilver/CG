//---------------------------------------------------------------------------

#pragma hdrstop

#include "uPonto.h"
#include "uJanela.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)

Ponto::Ponto(double nx, double ny){
	x = nx;
	y = ny;
}

Ponto::Ponto(){
    x = y = 0;
}

int Ponto::xW2Vp(Janela mundo, Janela vp){
	return (x - mundo.xMin) / (mundo.xMax Janela - mundo.xMin);
}
