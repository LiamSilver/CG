//---------------------------------------------------------------------------

#pragma hdrstop
#include "uJanela.h"
#include "uPonto.h"
#include "uPonto3d.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)

Ponto::Ponto(double nx, double ny, double nz)
{
	x = nx;
	y = ny;
    z = nz;
}

Ponto::Ponto()
{
    x = y = 0;
}
