//---------------------------------------------------------------------------

#pragma hdrstop
#include "uJanela.h"
#include "uPonto2d.h"
#include "uPonto.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)

Ponto::Ponto()
{
    z = 0;
}

Ponto::Ponto(double dx, double dy)
{
	z = 0;
}

AnsiString Ponto::mostra()
{
    return "(" + FloatToStr(x) + ", " + FloatToStr(y) + ", " + FloatToStr(z) +
           ")";
};

