//---------------------------------------------------------------------------

#pragma hdrstop

#include "uJanela.h"
#include "uPonto.h"

//---------------------------------------------------------------------------
#pragma package(smart_init)

Ponto::Ponto(double nx, double ny){
	x = nx;
	y = ny;
}

Ponto::Ponto(){
    x = y = 0;
}

int Ponto::xW2Vp(Janela mundo, Janela vp){
	return ((x - mundo.xMin) / (mundo.xMax - mundo.xMin)) * (vp.xMax - vp.xMin);
}

int Ponto::yW2Vp(Janela mundo, Janela vp){
	return (1 - (y - mundo.yMin) / (mundo.yMax - mundo.yMin)) * (vp.yMax - vp.yMin);
}

int Ponto::calcularCohen(Janela clipping){

	if(x<clipping.xMin)
	cohen+=1;
	else if(x>clipping.xMax)
	cohen+=2;

	if(y<clipping.yMin)
	cohen +=4;
	else if(y>clipping.yMax)
	cohen +=8;

    return cohen;
}

int Ponto::calcularCohenX(Janela clipping){

	if(x<clipping.xMin)
	return 1;
	else if(x>clipping.xMax)
	return 2;

    return 0;
}

int Ponto::calcularCohenY(Janela clipping){

	if(y<clipping.yMin)
	return 4;
	else if(y>clipping.yMax)
	return 8;

    return 0;
}

AnsiString Ponto::mostra(){
	return "(" + FloatToStr(x) + ", " + FloatToStr(y) + ")";
};
