//---------------------------------------------------------------------------

#pragma hdrstop
#include "uJanela.h"
#include "uPonto3d.h"
#include "uPoligono.h"
#include "uPoligono3d.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)

void Poligono::translacao(double dx, double dy)
{
    for (int i = 0; i < pontos.size(); i++) {
        pontos[i].x += dx;
        pontos[i].y += dy;
    }
}
